<h1>GAME TILE</h1>
<ul>
  {{#if flop}}{{#each dealer.flop as |card|}}{{card}}{{/each}}{{/if}}
  {{#if turn}}{{dealer.turn}}{{/if}}
  {{#if river}}{{dealer.river}}{{/if}}
  <button {{action 'dealHand' table}}>Deal Hand</button>
  <button {{action 'dealFlop'}}>Deal Flop</button>
  <button {{action 'dealTurn'}}>Deal Turn</button>
  <button {{action 'dealRiver'}}>Deal River</button>
  <button {{action 'finishHand'}}>Finish Hand</button>
</ul>

<div class="table">
  {{#if dealer.mDeck}}
    <div class="board">
      {{#each dealer.flop as |card|}}
      <img class="community-card" src="images/cards/{{card}}.svg">
      {{/each}}
      <img class="community-card" src="images/cards/{{dealer.turn}}.svg">
      <img class="community-card" src="images/cards/{{dealer.river}}.svg">
    </div>

      {{#each table.users as |user|}}
      <div class="player{{user.seat}}">
        <h2>{{user.name}}</h2>
        {{#if (eq user auth.currentUser)}}
          {{#if preflop}} {{#each user.holeCards as |card|}}
          <img class="player-card" src="images/cards/{{card}}.svg">
          {{/each}}
          {{/if}}
        {{else}}
        <img class="player-card" src="images/cards/back.png">
        <img class="player-card" src="images/cards/back.png">
        {{/if}}
      </div>
      {{/each}}

      {{#each user.holeCards as |card|}}
      {{/each}}
    {{/if}}

</div>
